<Window x:Class="Homework4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Zip / Postal Code"/>
        <TextBox x:Name="UxNumberTextBox" TextChanged="NumberValidationTextBox" />

        <Label x:Name="Uxoutput" />
        <Button x:Name="UxSubmit" Content="Submit" IsEnabled="False"/>
    </StackPanel>
</Window>
